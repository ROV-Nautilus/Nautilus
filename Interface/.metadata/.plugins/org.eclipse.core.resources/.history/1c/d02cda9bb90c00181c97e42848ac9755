package Camera;

import java.awt.BorderLayout;

import javax.swing.JFrame;
import javax.swing.JProgressBar;

public class Barre  implements Runnable{

	public boolean stop = false;
	public JFrame frame = null;
	
	public Barre() {
	}
	
	public void stop(){
		this.stop=true;
	}
	
	public void run() {
		
		this.frame = new JFrame("Stepping Progress");
		this.frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	    JProgressBar aJProgressBar = new JProgressBar(JProgressBar.VERTICAL);
	    aJProgressBar.setStringPainted(true);
	    aJProgressBar.setIndeterminate(true);

	    this.frame.add(aJProgressBar, BorderLayout.NORTH);
	    this.frame.setSize(300, 200);
	    this.frame.setVisible(true);
	    int x=0;
	    while(this.stop == false) {
	    	aJProgressBar.setValue(x);
	    	x=x+1;
	    }
	}

}
